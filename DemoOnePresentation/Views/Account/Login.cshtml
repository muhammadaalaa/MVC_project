@model loginViewMode;
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}
<div class="login-container">
    <div class="login-header">
        <h2 class="login-title">Welcome Back!</h2>
        <p class="login-subtitle">Please login to continue</p>
    </div>

    <form class="form-detail" asp-action="Login" method="post">
        <div class="form-group">
            <label for="Email">Email</label>
            <input asp-for="Email" id="Email" class="input-text" placeholder="Your Email" required>
            <span asp-validation-for="Email" class="text-danger"></span>
            <i class="fas fa-envelope"></i>
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input asp-for="password" id="password" class="input-text" placeholder="Your Password" required>
            <span asp-validation-for="password" class="text-danger"></span>
            <i class="fas fa-lock"></i>
        </div>

        <div class="checkbox-wrapper-19">
            <input type="checkbox" id="cbtest-19" />
            <label for="cbtest-19" class="check-box"></label>
            <span class="checkbox-text font-weight-normal">Remember me</span>
        </div>

        <div class="form-row-last">
            <input type="submit" value="Sign In">
        </div>
    </form>

    <div class="login-link">
        <p>Don't have an account? <a asp-action="Register" class="signup-link">Sign Up</a></p>
    </div>
    <div class="forget-password-link">
        <p><a asp-action="ForgetPassword" class="forgot-link">Forgot Password?</a></p>
    </div>
</div>

@section createAndEditValidation {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    /* Container for the entire login form */
    .login-container {
        max-width: 400px;
        margin: 0 auto;
        padding: 30px;
        background-color: #fff;
        box-shadow: 0px 4px 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
        font-family: Arial, sans-serif;
    }

    /* Header section */
    .login-header {
        text-align: center;
        margin-bottom: 20px;
    }

    .login-title {
        font-size: 30px;
        color: #2f8f85; /* Calm greenish tone */
        font-weight: bold;
    }

    .login-subtitle {
        font-size: 16px;
        color: #777;
        margin-top: 10px;
    }

    /* Styling for the form fields */
    .form-group {
        margin-bottom: 20px;
        position: relative;
    }

    .input-text {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border: 1px solid #ddd;
        border-radius: 4px;
        font-size: 16px;
    }

        .input-text:focus {
            border-color: #2f8f85;
            outline: none;
        }

    .fas {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        left: 10px;
        color: #2f8f85;
    }

    .form-row-last {
        text-align: center;
    }

    input[type="submit"] {
        width: 100%;
        padding: 10px;
        background-color: #2f8f85;
        color: white;
        border: none;
        border-radius: 4px;
        font-size: 18px;
        cursor: pointer;
    }

        input[type="submit"]:hover {
            background-color: #276d63;
        }

    /* Links and additional text */
    .login-link, .forget-password-link {
        text-align: center;
        margin-top: 20px;
    }

    .signup-link, .forgot-link {
        font-size: 14px;
        color: #2f8f85;
        text-decoration: none;
        font-weight: bold;
        transition: color 0.3s ease-in-out;
    }

        .signup-link:hover, .forgot-link:hover {
            color: #276d63;
        }

    .checkbox-wrapper-19 {
        display: flex;
        align-items: center;
        margin-bottom: 20px;
    }

    .checkbox-text {
        margin-left: 10px;
    }
</style>
