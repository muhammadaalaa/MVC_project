@model ForgetpasswordView
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/AuthLayout.cshtml";
}

<h1 class="page-title">Forget Password</h1>
<form class="form-detail" asp-action="sendEmail" method="post">
<label for="Email"> Email</label>
<input asp-for="Email" id="Email" class="input-text" placeholder="Your Email" required>
<span asp-validation-for="Email" class="text-danger"></span>
<i class="fas fa-envelope"> </i>
<br />
<div class="form-row-last">
    <input type="submit" value="send">
</div>
</form>
@section createAndEditValidation {
    <partial name="_ValidationScriptsPartial" />
}


<style>
    .page-title {
        font-size: 36px; /* Larger font size */
        color: #2f4f4f; /* Calm dark tone */
       /*  text-transform: uppercase */; /* Makes the title stand out */
        letter-spacing: 1.5px; /* Adds elegance */
        text-align: center; /* Centers the title */
        font-weight: bold;
        margin-bottom: 20px; /* Space below the header */
        background: linear-gradient(to right, #6cb2a3, #b3dcd7); /* Subtle gradient */
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }
</style>