@model Department
@{
    ViewData["Title"] = "Delete";
}
<h1 class="text-danger">Are you sure that you want to Delete this item </h1>
<form asp-action= "Delete" >

    <div class="form-group">
        <label class="col-form-label" asp-for="code"></label>
        <input readonly read class="form-control" asp-for="code" />
        <span asp-validation-for="code" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="name"></label>
        <input readonly class="form-control" asp-for="name" />
        <span asp-validation-for="name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label class="col-form-label" asp-for="dateOFCreation"></label>
        <input readonly class="form-control" asp-for="dateOFCreation" />
        <span asp-validation-for="dateOFCreation" class="text-danger"></span>
    </div>
    <input  type="submit" value="Delete" class="btn btn-primary" />
    <a asp-action="index" asp-controller="department" class="btn btn-danger">Cancel</a>
</form>